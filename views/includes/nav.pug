mixin sideNav()
    if user
        li
            a(href='/trend') 트렌드
        li
            a(href='/sign-out') 로그아웃
    else
        li
            a(href='/sign-in') 로그인
        li
            a(href='/sign-up') 회원가입

nav.brand-color(class=user ? 'nav-extended' : '')
    .nav-wrapper.container
        a.brand-logo(href='/') Wilivery

        a.button-collapse(href='#', data-activates='mobile')
            i.material-icons menu

        ul.right.hide-on-med-and-down
            +sideNav()

        ul.side-nav#mobile
            +sideNav()

        if user
            ul.tabs.tabs-transparent
                li.tab
                    a(href='#recent') Recent

                li.tab
                    a(href='#groups') Groups
