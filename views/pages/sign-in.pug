extends ../app

append scripts
    script(src='/js/sign-in.js')

block app
    .row
        form.col.s12(action='/sign-in', method='post')
            .row
                .input-field.col.s12
                    input#email.validate(type='email')
                    label(for='email') Email
            .row
                .input-field.col.s12
                    input#password.validate(type='password')
                    label(for='password') Password

            .row
                .col.s12
                    button.btn.waves-effect.waves-light(type='submit', name='action')
                        | Submit
                        i.material-icons.right send
